<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity"
    android:background="#edf3f5">


    <me.tedyin.circleprogressbarlib.CircleProgressBar
        android:id="@+id/bar3"
        app:cpbStrokeWidth="5"
        app:cpbMaxAngle="360"
        app:cpbStartAngle="-90"
        app:cpbNeedAnim="false"
        app:cpbForegroundColor="#ffcf3a"
        app:cpbProgressTextColor="#ffcf3a"
        app:cpbWholeBackgroundColor="#ffffff"
        android:layout_height="130dp"
        android:layout_width="130dp"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:text="button"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/bar3"
        android:layout_alignStart="@+id/bar3"
        android:layout_marginBottom="202dp"
        android:layout_alignRight="@+id/bar3"
        android:layout_alignEnd="@+id/bar3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView6"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_alignBottom="@+id/bar3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#207ac1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本月回款"
        android:id="@+id/textView5"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:textColor="#a1a1a2"
        android:layout_alignTop="@+id/textView2"
        android:layout_toLeftOf="@+id/textView6"
        android:layout_toStartOf="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView4"
        android:layout_above="@+id/textView6"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:textColor="#bee5f7"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目标额度"
        android:id="@+id/textView3"
        android:textColor="#a1a1a2"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本月额度"
        android:id="@+id/textView"
        android:textColor="#a1a1a2"
        android:layout_above="@+id/textView3"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textView2"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:textColor="#f49d11"/>

</RelativeLayout>
